# OpenAI API Key (Required for AI features)
OPENAI_API_KEY=

# ElevenLabs API Key (Optional - for premium TTS)
ELEVENLABS_API_KEY=

# Music library directory (Optional - for background music)
MUSIC_LIBRARY_DIR=./assets/music

# Artifacts output directory
ARTIFACTS_DIR=./artifacts

# Database URL (SQLite)
DATABASE_URL="file:./dev.db"

# Server port
PORT=3001

# Node environment
NODE_ENV=development

# Test mode (disables render and external providers)
APP_TEST_MODE=0

# Render dry-run (simulate render without API keys/FFmpeg)
APP_RENDER_DRY_RUN=0

# Optional: inject a failure at a render step
# Valid values: tts_generate | asr_align | images_generate | captions_build | music_build | ffmpeg_render | finalize_artifacts
APP_DRY_RUN_FAIL_STEP=

# Optional: add a delay (ms) before each dry-run step
APP_DRY_RUN_STEP_DELAY_MS=0

# Render smoke helper
SMOKE_BASE_URL=http://localhost:3001
SMOKE_ALLOW_REAL=0
SMOKE_VERIFY=0

# Optional app version override
APP_VERSION=
