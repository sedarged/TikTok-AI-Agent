# Server (apps/server). Copy to .env and fill values.
# When adding new variables in env.ts, add them here (G3 in DEVELOPMENT_MASTER_PLAN).

PORT=3001
NODE_ENV=development

# Database configuration
# SQLite (development/local)
DATABASE_URL=file:./dev.db
# PostgreSQL (production - example)
# DATABASE_URL=postgresql://user:password@localhost:5432/tiktok_ai?schema=public

# Database connection pooling (optional)
# Controls the maximum number of database connections and timeout
# DATABASE_CONNECTION_LIMIT=10
# DATABASE_POOL_TIMEOUT=10

OPENAI_API_KEY=
ELEVENLABS_API_KEY=

# Paths (defaults resolved from repo root if not set)
# MUSIC_LIBRARY_DIR=
# ARTIFACTS_DIR=

# Render pipeline performance (optional)
# Maximum concurrent image generation requests (default: 3)
# Higher values = faster renders but more OpenAI API load
# MAX_CONCURRENT_IMAGE_GENERATION=3

# Test / dry-run
# APP_TEST_MODE=0
# APP_RENDER_DRY_RUN=0
# APP_DRY_RUN_FAIL_STEP=
# APP_DRY_RUN_STEP_DELAY_MS=0

# Optional
# APP_VERSION=
# Production: comma-separated origins for CORS (e.g. https://myapp.com)
# ALLOWED_ORIGINS=
