{
  "name": "tiktok-ai",
  "version": "1.0.0",
  "private": true,
  "description": "TikTok-style AI video generator",
  "workspaces": [
    "apps/server",
    "apps/web"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:web\"",
    "dev:server": "npm run dev --workspace=apps/server",
    "dev:web": "npm run dev --workspace=apps/web",
    "build": "npm run build --workspace=apps/server && npm run build --workspace=apps/web",
    "start": "npm run start --workspace=apps/server",
    "db:generate": "npm run db:generate --workspace=apps/server",
    "db:migrate": "npm run db:migrate --workspace=apps/server",
    "db:seed": "npm run db:seed --workspace=apps/server",
    "db:studio": "npm run db:studio --workspace=apps/server"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
